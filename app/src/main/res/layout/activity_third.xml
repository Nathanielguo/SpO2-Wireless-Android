<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/view02">

    <TextView
        android:text="关于"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="80dp"
        android:id="@+id/关于"
        android:layout_marginTop="5dp"
        android:textStyle="bold"/>

    <TextView
        android:text="这是一款通过WiFi无线传输的血氧双波监测软件。"
        android:textSize="15dp"
        android:textColor="@android:color/black"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lines1"
        android:layout_below="@id/关于" />

    <TextView
        android:text="操作方法："
        android:textSize="15dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lines2"
        android:layout_below="@id/lines1" />

    <TextView
        android:text="1.首先开启硬件SpO2监测设备，手机打开WiFi搜索“WiFi_SpO2”输入密码并连接；"
        android:textSize="15dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="10dp"
        android:textColor="@android:color/black"
        android:id="@+id/lines3"
        android:layout_below="@id/lines2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="2.然后进入软件，点击【无线连接】输入正确的IP和端口号，连接WiFi通讯；"
        android:textSize="15dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="10dp"
        android:textColor="@android:color/black"
        android:id="@+id/lines4"
        android:layout_below="@id/lines3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="3.返回首页，点击【开始监测】，即可进入页面显示实时血氧双波。"
        android:textSize="15dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="10dp"
        android:textColor="@android:color/black"
        android:id="@+id/lines5"
        android:layout_below="@id/lines4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
